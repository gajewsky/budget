%section.content.hold-transition.login-page
  .login-box
    .login-logo
      %b> Calincome
    .login-box-body
      %p.login-box-msg Sign in to start your session
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group.has-feedback
          = f.input :email, required: false, autofocus: true, class: 'form-control'
          %span.glyphicon.glyphicon-envelope.form-control-feedback
        .form-group.has-feedback
          = f.input :password, required: false, class: 'form-control'
          %span.glyphicon.glyphicon-lock.form-control-feedback
        .row
          .col-xs-8
            .checkbox.icheck
              %label
                = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
          .col-xs-4
            = f.button :submit, 'Sign In', class: 'btn btn-primary btn-block btn-flat'

:javascript
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' // optional
    });
  });
