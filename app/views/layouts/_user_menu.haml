%li.dropdown.user.user-menu
  / Menu Toggle Button
  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
    = image_tag(current_user.avatar || 'no-avatar.jpg', height: '160', width: '160', class: 'user-image')
    %span.hidden-xs= current_user.email
  %ul.dropdown-menu
    / The user image in the menu
    %li.user-header
      = image_tag(current_user.avatar || 'no-avatar.jpg', height: '260', width: '260', class: 'img-circle')
      %p
        = current_user.email
        %small Member since #{l current_user.created_at}
    %li.user-footer
      .pull-left
        = link_to 'Profile', edit_user_registration_path, class: 'btn btn-default btn-flat'
      .pull-right
        = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-default btn-flat'
%li
  %a{"data-toggle" => "control-sidebar", :href => "#"}
    %i.fa.fa-gears
