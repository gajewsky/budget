%aside.main-sidebar
  %section.sidebar
    .user-panel
      .pull-left.image
        = image_tag(current_user.avatar || 'no-avatar.jpg', height: '160', width: '160', class: 'img-circle')
      .pull-left.info
        %p= current_user.email
        %a
          %i.fa.fa-circle.text-success

    %form.sidebar-form{ action: '/expenses', method: 'get'}
      .input-group
        %input.form-control{ name: 'q', placeholder: 'Search...', type: 'text'}/
        %span.input-group-btn
          %button#search-btn.btn.btn-flat{ name: 'search', type: 'submit'}
            %i.fa.fa-search
    %ul.sidebar-menu
      %li.treeview
        %a{ href: '#'}
          %i.fa.fa-pie-chart
          %span Raports
          %span.pull-right-container
            %i.fa.fa-angle-left.pull-right
        %ul.treeview-menu
          %li
            = link_to dashboard_index_path do
              %i.fa.fa-calendar
              Rangable
          %li
            = link_to dashboard_overall_path do
              %i.fa.fa-globe
              Overall

      %li.treeview
        = link_to incomes_path do
          %i.fa.fa-usd
          %span Incomes

      %li.treeview
        = link_to expenses_path do
          %i.fa.fa-shopping-cart
          %span Expenses

      %li.treeview
        = link_to savings_path do
          %i.fa.fa-home
          %span Savings

      %li.treeview
        = link_to contractors_path do
          %i.fa.fa-shopping-bag
          %span Shops

      %li.treeview
        = link_to categories_path do
          %i.fa.fa-th
          %span Categories

      %li.treeview
        = link_to tracking_path do
          %i.fa.fa-hand-lizard-o
          %span Tracking expenses
