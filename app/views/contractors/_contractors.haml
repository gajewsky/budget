.box-body.table-responsive.no-padding
  %table.table.table-sm.table-hover
    %thead
      %tr
        %th Name
        %th Default Category
        %th Revolut
        %th.col-sm-1
    %tbody
      - contractors.each do |contractor|
        %tr
          %td= link_to contractor.name, contractor_path(contractor)
          %td= link_to contractor.subcategory.title, subcategory_path(contractor.subcategory) if contractor.subcategory
          %td= truncate(contractor.revolut_id, length: 30)

          %td.col-sm-1
            = link_to edit_contractor_path(contractor) do
              %span.badge.rounded-pill.bg-warning Edit
            = link_to contractor_path(contractor), method: :delete, data: { confirm: 'Are you sure?' } do
              %span.badge.rounded-pill.bg-danger Remove
  